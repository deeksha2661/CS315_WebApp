<% layout('layouts/boilerplate')%>
<div id="cluster-map" ></div>

<h1>All Restaurants</h1>
<div>
    <a href="/restaurants/new">Add Restaurant </a>
</div>
    <% for (let r of restaurants) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(r.images.length) { %>                         
                    <img class="img-fluid" alt="" src="<%=r.images[0].url%>">
                    <% } else { %>
                    <img class="img-fluid" alt="" src="https://res.cloudinary.com/duw4qslmx/image/upload/v1649197832/cld-sample.jpg">
                    <% } %>  
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=r.title%>
                        </h5>
                        
                        <p class="card-text"><%=r.description%></p>
                        <p class="card-text">
                            <small class="text-muted"><%=r.location%></small>
                        </p>
                        <a class="btn btn-primary" href="/restaurants/<%=r._id%>">View <%=r.title%></a>
                    </div>
                </div>
            </div>
        </div>
    <% }%>


    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const restaurants = {features: <%-JSON.stringify(restaurants)%>};
    </script>
<script src="/javascripts/clusterMap.js"></script>